%h1 Users
%table
  %thead
    %tr
      %th Name
      %th Email
      %th
  %tbody
    - @users.each do |user|
      %tr
        %td=link_to user.name, user
        %td= mail_to user.email
        %td.actions

          =link_to 'Edit', edit_user_path(user)
          =link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }

.actions= link_to 'New User', new_user_path
