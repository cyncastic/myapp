%h1 Vendors
%table
  %thead
    %tr
      %th Name
      %th
  %tbody
    - @vendors.each do |vendor|
      %tr
        %td= link_to vendor.name, vendor
        %td.actions

          = link_to 'Edit', edit_vendor_path(vendor)
          = link_to 'Destroy', vendor, method: :delete, data: { confirm: 'Are you sure?' }

.actions= link_to 'New Vendor', new_vendor_path
