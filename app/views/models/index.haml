.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Name
        %th Manufacturer
        %th{:colspan => "3"}
    %tbody
      - @models.each do |model|
        %tr
          %td= link_to model.name, model
          %td= link_to model.manufacturer.name, model
          %td.actions
            = link_to 'Edit', edit_model_path(model), class: 'btn btn-primary'
            = link_to 'Destroy', model, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'
= link_to 'New Model', new_model_path, class: 'btn btn-primary'